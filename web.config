<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="senai-gpt-api.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <!-- Redireciona todas as requisições para seu app Node -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="senai-gpt-api.js"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>